@model CvStorage.Api.ViewModels.CvVm

<h3 style="margin-left: 42%; margin-bottom: 50px; margin-top: 50px">Work experience</h3>

<div id="workExperience">
    @for (var i = 0; i < Model.WorkExperienceVmList.Count; i++)
    {
        <div class="workExperience-section">
            <div class="row">
                <div class="col">
                    <h5 style="margin-left: 50px">Company name</h5>
                    @Html.TextBoxFor(model => model.WorkExperienceVmList[i].Name, new {@class = "form-control", type = "text", style = "margin-left: 50px; min-width: 610px", placeholder = "Company name"})
                </div>
                <div class="col">
                    <h5 style="margin-left: 50px">Position</h5>
                    @Html.TextBoxFor(model => model.WorkExperienceVmList[i].Position, new {@class = "form-control", type = "text", style = "margin-left: 50px; width: 350px", placeholder = "Position"})
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <h5 style="margin-left: 50px">Schedule</h5>
                    @Html.TextBoxFor(model => model.WorkExperienceVmList[i].Schedule, new {@class = "form-control", type = "text", style = "margin-left: 50px; width: 350px", placeholder = "Schedule"})
                </div>
                <div class="col">
                    <h5 style="margin-left: 50px">From date</h5>
                    @Html.TextBoxFor(model => model.WorkExperienceVmList[i].WorkStart, new {@class = "form-control", type = "date", style = "margin-left: 50px; width: 350px", placeholder = "From date"})
                </div>
                <div class="col">
                    <h5 style="margin-left: 50px">To date</h5>
                    @Html.TextBoxFor(model => model.WorkExperienceVmList[i].WorkFinished, new {@class = "form-control", type = "date", style = "margin-left: 50px; width: 350px", placeholder = "To date"})
                </div>
                <button type="button" style="margin-left: 10px; min-width: 1px; margin-bottom: -10px; height: 1px; background-color: white" class="remove btn btn-secondary ">
                    <span style="margin-right: 1px; font-size: 25px" class="glyphicon glyphicon-trash"></span>
                </button>
            </div>
        </div>
    }
</div>

<button id="addWorkExperience" class="btn btn-warning" style="margin-left: 43%; margin-bottom: -90px; margin-top: -3%; min-width: 60px" type="button">Add work experience</button>